{
  "name": "studyscope-analytics",
  "version": "1.0.0",
  "description": "Modern React dashboard for Excel student data analytics",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm install --include=dev && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.6.1",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "keywords": ["react", "analytics", "dashboard", "excel", "education", "mongodb"],
  "author": "Aditya Garg",
  "license": "MIT"
}
